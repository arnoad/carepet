<div class='m-3'>
  <h2>Send a request</h2>
  <%= simple_form_for [@carer, @request], url: carer_requests_path(@carer) do |f| %>
    <% if @request.errors.any? %>
      <% @request.errors.full_messages %>
    <% end %>
    <%= f.input :start_date, order: [:day, :month, :year] %>
    <%= f.input :end_date, order: [:day, :month, :year] %>
    <%= f.input :carers_home %>
    <%= f.input :price %>
    <%= f.association :pet, collection: current_user.pets %>
    <%= f.submit :BOOK, class: "btn-one", style: 'border: none;' %>
  <% end %>
  <div class="profile-buttons">
    <%= link_to 'BACK', carer_path(@carer), class: "btn-two", style: "width: 100%;" %>
  </div>
</div>
