<div class="m-3">
  <h1><%= @carer.full_name %>'s profile</h1>
  <div class="profile-card">
    <div class="profile-avatar-info">
      <div>
        <%= cl_image_tag current_user.photo.key, class: "avatar-profile" %>
      </div>
      <div>
        <div class="profile-avatar-info-title">
          <p><i class="fa-solid fa-user"></i> <%= @carer.full_name %>, <%= @carer.age %></p>
        </div>
        <div class="profile-avatar-info-text">
          <p><i class="fa-solid fa-location-dot"></i> <%= @carer.address %></p>
          <p><i class="fa-solid fa-house"></i> <%= @carer.house_type %></p>
        </div>
      </div>
    </div>
    <div class="bio">
      <p><%= @carer.bio %></p>
    </div>
  </div>
  <%= link_to 'Back to search', carers_path, class: "btn btn-secondary" %>
  <%= link_to 'Book this carer', new_carer_request_path(@carer), class: "btn btn-primary" %>
</div>
