<div class='m-3'>
  <h1>My account  <%= link_to '', edit_user_registration_path, class: "fa-solid fa-pen-to-square", style: "text-decoration: none;" %></h1>
  <div class="profile-card">
    <div class="profile-avatar-info">
      <div>
      <% if current_user && current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar-profile" %>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-circle" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path>
          <path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
          <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855"></path>
        </svg>
      <% end %>
      </div>
      <div>
        <div class="profile-avatar-info-title">
          <p><i class="fa-solid fa-user"></i> <%= current_user.full_name %>, <%= current_user.age %></p>
        </div>
        <div id="profile-avatar-info-text">
          <p><i class="fa-solid fa-location-dot"></i> <%= current_user.address %></p>
          <p><i class="fa-solid fa-house"></i> <%= current_user.house_type %></p>
          <%#= link_to '', edit_user_registration_path, class: "fa-solid fa-pen-to-square" %>
        </div>
      </div>
    </div>
    <div class="bio">
      <p><%= current_user.bio %></p>
    </div>
  </div>
  <div id="pets-cards">
    <h2>My pets    <%= link_to '', new_pet_path, class: "fa-solid fa-circle-plus", style: "text-decoration: none;" %></h2>
    <%= render 'pets/pets', pets: current_user.pets %>
  </div>
</div>
